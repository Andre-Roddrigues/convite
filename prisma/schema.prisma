
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  date        String
  time        String
  location    String
  createdAt   DateTime @default(now())

  users       User[]   
}

model User {
  id         String   @id @default(uuid())
  fullName   String
  phone      String
  attendance Boolean
  message    String?

  eventId    String
  event      Event    @relation(fields: [eventId], references: [id])

  createdAt  DateTime @default(now())
}